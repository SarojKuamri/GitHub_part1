@model BookMyShow.Models.RatingModel
@{
    ViewData["Title"] = "EditRating";
}
<h1>EditRating</h1>


@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-12">
            <input type="hidden" asp-for="RatingId" />
            <div class="form-group">
                <label asp-for="MovieRatings" class="control-label">Movie Rating</label>
                <input type="text" asp-for="MovieRatings" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label">Movie Name</label>
                <select asp-for="MovieId" class="form-control" asp-items="@ViewData["MovieId"] as SelectList"></select>
            </div>
            <input type="submit" value="Save Rating" class="btn btn-primary" />
            @Html.ActionLink("GotoBack", "Index")
        </div>
    </div>
}


