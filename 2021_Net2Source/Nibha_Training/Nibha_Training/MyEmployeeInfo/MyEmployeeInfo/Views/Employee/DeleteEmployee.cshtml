@model MyEmployeeInfo.Models.EmployeeModel
@{
    ViewData["Title"] = "DeleteEmployee";
}

<h1>DeleteEmployee</h1>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                @Html.DisplayNameFor(@EmployeeId => EmployeeId.EmployeeId)
                @Html.TextBoxFor(@EmployeeId => EmployeeId.EmployeeId)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(@EmployeeName => @EmployeeName.EmployeeName)
                @Html.TextBoxFor(@EmployeeName => @EmployeeName.EmployeeName)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(@EmployeeType => @EmployeeType.EmployeeType)
                @Html.TextBoxFor(@EmployeeType => @EmployeeType.EmployeeType)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(@EmployeeCode => @EmployeeCode.EmployeeCode)
                @Html.TextBoxFor(@EmployeeCode => @EmployeeCode.EmployeeCode)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(@EmployeePosition => @EmployeePosition.EmployeePosition)
                @Html.TextBoxFor(@EmployeePosition => @EmployeePosition.EmployeePosition)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(@EmployeeLocation => @EmployeeLocation.OfficeLocation)
                @Html.TextBoxFor(@EmployeeLocation => @EmployeeLocation.OfficeLocation)
            </div>
            <input type="submit" value="Save Employee" class="btn btn-primary" />
            <input type="button" value="Reset" class="btn btn-secondary" />
        </div>
    </div>
}