@model BookMyShow.Models.TheaterModel
@{
    ViewData["title"] = "CreateTheater";
    //Layout = "~Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>CreateTheater</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="row" style=" text-align:center">
            <div class="col-12">

                <div class="form-group">
                    <label for="TheaterName">
                        @Html.DisplayNameFor(TheaterObj => TheaterObj.ThreaterName)
                    </label>
                    @Html.TextBoxFor(TheaterObj => TheaterObj.ThreaterName)
                </div>
                <div class="form-group">
                    <label for="TheaterLocation">
                        @Html.DisplayNameFor(TheaterObj => TheaterObj.ThreaterLoc)
                    </label>
                    @Html.TextBoxFor(TheaterObj => TheaterObj.ThreaterLoc)
                </div>
                <input type="submit" value="Save Theater" class="btn btn-primary" />
                <input type="button" value="Reset" Onclick="reset()" class="btn btn-secondary" />

            </div>
        </div>

    }
</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@section scripts{
    <script>
        function reset() {
            $('#ThreaterName').val();
            $('#ThreaterLoc').val();
        }
    </script>
}
